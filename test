 import React, { useState } from 'react';
import {
  Checkbox,
} from '@americanexpress/dls-react';

const CheckboxList = ({ list }) => {
  const [listItem, setListItem] = useState(list);

  const handleCheckBoxClick = (itemClicked) => {
    const newList = listItem.map((item) => {
      if (item.name === itemClicked.name) {
        item.checked = !item.checked;
      }
      return item;
    });
    setListItem(newList);
  };
  return (
    listItem.map((item) => (
      <Checkbox
        aria-describedby="check-alert"
        checked={item.checked}
        id={item.name}
        key={item.name}
        label={item.name}
        name={item.name}
        onChange={() => handleCheckBoxClick(item)}
      />
    )
    )
  );
};

export default CheckboxList;
