 const handleRowCheckChange = (i, { id }) => {
  changeTableData(id);

  setCheckedData((current) => {
    const newState = [...current];
    const index = newState.findIndex((row) => row.nReportCondId === id);

    if (index !== -1) {
      // Ensure the 'checked' property is initialized to false if not present
      newState[index].checked = newState[index].checked || false;
    }

    return newState;
  });
};
