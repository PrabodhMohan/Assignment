  const changeTableData = (id) => {
    setTableData((current) => {
      return current.map((row) => {
        if (row.nReportCondId === id) {
          return { ...row, checked: !row.checked };
        }
        return row;
      });
    });
  };
-------------------
 const handleRowCheckChange = (i, { id }) => {
    changeTableData(id);

    setCheckedData((current) => {
      return current.map((row) => {
        if (row.nReportCondId === id) {
          return { ...row, checked: !row.checked };
        }
        return row;
      });
    });
  };
