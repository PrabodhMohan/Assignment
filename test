 import React from 'react';
import { render, fireEvent } from '@testing-library/react';
import '@testing-library/jest-dom/extend-expect';
import CloneConfiguarion from './CloneConfiguarion';

describe('CloneConfiguarion', () => {
  test('renders CloneConfiguarion component', () => {
    const { getByText } = render(<CloneConfiguarion />);
    
    // Check if the main heading is rendered
    expect(getByText('Clone Configuration')).toBeInTheDocument();
  });

  test('changes step tracker on button click', () => {
    const { getByText, getByTestId } = render(<CloneConfiguarion />);
    
    // Click on a button
    fireEvent.click(getByText('Report'));
    
    // Check if the step tracker is updated
    expect(getByTestId('multiStepTracker')).toHaveTextContent('1 of 4');
  });

  test('expands/collapses collapsible panels', () => {
    const { getByText, getByLabelText } = render(<CloneConfiguarion />);
    
    // Click on the collapsible panel heading
    fireEvent.click(getByText('Step1'));
    
    // Check if the panel is open
    expect(getByLabelText('panel1')).toHaveAttribute('aria-expanded', 'true');
    
    // Click again to collapse the panel
    fireEvent.click(getByText('Step1'));
    
    // Check if the panel is closed
    expect(getByLabelText('panel1')).toHaveAttribute('aria-expanded', 'false');
  });

  test('displays modal on button click', () => {
    const { getByText, getByTestId } = render(<CloneConfiguarion />);
    
    // Click on a button to show the modal
    fireEvent.click(getByText('Report'));
    
    // Check if the modal is displayed
    expect(getByTestId('modal-example')).toBeInTheDocument();
  });

  // Add more test cases as needed to cover different scenarios
});


