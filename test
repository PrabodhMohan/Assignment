  it('disables Delete button when no row is checked', () => {
    const { getByText } = render(<CheckableDataTable tableData={tableData} />);
    
    // Verify that the Delete button is initially disabled
    expect(getByText('Delete')).toBeDisabled();
  });

  it('disables Edit button when more than one row is checked', () => {
    const { getByText, getByLabelText } = render(<CheckableDataTable tableData={tableData} />);
    
    // Check multiple rows
    fireEvent.click(getByLabelText('0'));
    fireEvent.click(getByLabelText('1'));

    // Verify that the Edit button is disabled
    expect(getByText('Edit')).toBeDisabled();
  });
