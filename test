 import React from 'react';
import { render, screen, fireEvent } from '@testing-library/react';
import CheckboxList from '../../../src/components/Common/CheckboxList';

describe('CheckboxList', () => {
  it('should render CheckboxList with checked.', () => {
    render(<CheckboxList list={[{ id: 1, name: 'test', checked: false }]} />);
    const btnCheckbox = screen.getByRole('checkbox', { name: 'test' });
    fireEvent.click(btnCheckbox, { name: 'test' });
    expect(screen.getByRole('checkbox', { name: 'test' })).toBeChecked();
  });
  it('should render CheckboxList with unchecked.', () => {
    render(<CheckboxList list={[{ id: 1, name: 'test', checked: true }]} />);
    const btnCheckbox = screen.getByRole('checkbox', { name: 'test' });
    fireEvent.click(btnCheckbox, { name: 'test' });
    expect(screen.getByRole('checkbox', { name: 'test' })).not.toBeChecked();
  });
});
