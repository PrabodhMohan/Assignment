const handleRowCheckChange = (i, { id }) => {
  changeTableData(id);

  setCheckedData((current) => {
    return current.map((row) => {
      if (row.nReportCondId === id) {
        // Create a new object to avoid modifying the original state
        return { ...row, checked: !row.checked || false };
      }
      return row;
    });
  });
};
