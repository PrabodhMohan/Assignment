 useEffect(() => {
    setCurrentRows(tableData.map(row => ({ ...row, checked: false })));
  }, [tableData]);

  useEffect(() => {
    const filteredCheckedRows = currentRows.filter(row => row.checked);
    setIsSingleRowChecked(filteredCheckedRows.length === 1);
    setDisableDeleteBtn(filteredCheckedRows.length === 0);
  }, [currentRows]);

  const handlePageChange = (pageNumber) => {
    setCurrentPage(pageNumber);
  };

  const handleRowsPerPageChange = (e) => {
    setItemsPerPage(e.target.value);
    setCurrentPage(1);
  };

  const handleRowCheckChange = (id) => {
    const updatedRows = currentRows.map((row) => {
      if (row.nReportCondId === id) {
        return { ...row, checked: !row.checked };
      }
      return row;
    });
    setCurrentRows(updatedRows);
    changeTableData(id);
  };
